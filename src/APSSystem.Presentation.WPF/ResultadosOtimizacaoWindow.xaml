<Window x:Class="APSSystem.Presentation.WPF.ResultadosOtimizacaoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:viewModels="clr-namespace:APSSystem.Presentation.WPF.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:ResultadosOtimizacaoViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="Optimization Results Analysis" Height="800" Width="1400" WindowStartupLocation="CenterOwner" FontSize="14">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Post-Optimization Analysis" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="SeaGreen" BorderThickness="2" CornerRadius="3" Padding="10">
                <StackPanel>
                    <TextBlock Text="Order Fulfillment" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding OrderFulfillmentPercentage, StringFormat={}{0:P1}}" FontSize="28" FontWeight="Bold" Foreground="SeaGreen"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" BorderBrush="Tomato" BorderThickness="2" CornerRadius="3" Padding="10" Margin="10,0,10,0">
                <StackPanel>
                    <TextBlock Text="Average Waste %" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding AverageWastePercentage, StringFormat={}{0:P2}}" FontSize="28" FontWeight="Bold" Foreground="Tomato"/>
                </StackPanel>
            </Border>
        </Grid>

        <GroupBox Grid.Row="2" Header="Production Gantt Chart" FontWeight="SemiBold">
            <lvc:CartesianChart Series="{Binding SeriesGantt}" XAxes="{Binding XAxesGantt}" YAxes="{Binding YAxesGantt}" TooltipPosition="Hidden"/>
        </GroupBox>

        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Customer Order Fulfillment" FontWeight="SemiBold" Padding="5">
                <DataGrid ItemsSource="{Binding PlanoCliente}" AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order #" Binding="{Binding NumeroOrdemCliente}" Width="*"/>
                        <DataGridTextColumn Header="Product (Base)" Binding="{Binding PN_Base}" Width="*"/>
                        <DataGridTextColumn Header="Required Date" Binding="{Binding DataEntregaRequerida, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Planned Date" Binding="{Binding DataProducaoReal, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Deviation" Binding="{Binding DiasDesvio}" Width="Auto"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding StatusEntrega}" Width="*" FontWeight="Bold"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Production Orders (by Cutting Pattern)" FontWeight="SemiBold" Padding="5" Margin="10,0,0,0">
                <DataGrid ItemsSource="{Binding PlanoProducao}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding DataProducao, StringFormat=d}" Width="Auto"/>
                        <DataGridTextColumn Header="Machine" Binding="{Binding Maquina}" Width="*"/>
                        <DataGridTextColumn Header="Pattern" Binding="{Binding PadraoCorte}" Width="*"/>
                        <DataGridTextColumn Header="Waste %" Binding="{Binding PerdaMaterialPercentual, StringFormat=P2}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <StatusBar Grid.Row="4" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
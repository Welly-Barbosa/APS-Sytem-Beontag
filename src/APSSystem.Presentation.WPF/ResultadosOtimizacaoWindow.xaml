<Window x:Class="APSSystem.Presentation.WPF.ResultadosOtimizacaoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:APSSystem.Presentation.WPF.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:ResultadosOtimizacaoViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="Optimization Results Analysis" Height="800" Width="1400" WindowStartupLocation="CenterOwner" FontSize="14">

    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Post-Optimization Analysis" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="SeaGreen" BorderThickness="2" CornerRadius="3" Padding="10">
                <StackPanel>
                    <TextBlock Text="Order Fulfillment" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding OrderFulfillment, StringFormat={}{0:P2}}" FontSize="28" FontWeight="Bold" Foreground="SeaGreen"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" BorderBrush="Tomato" BorderThickness="2" CornerRadius="3" Padding="10" Margin="10,0,10,0">
                <StackPanel>
                    <TextBlock Text="Average Waste %" Foreground="Gray" FontSize="16"/>
                    <TextBlock Text="{Binding AverageWaste, StringFormat={}{0:P2}}" FontSize="28" FontWeight="Bold" Foreground="Tomato"/>
                </StackPanel>
            </Border>
        </Grid>

        <GroupBox Grid.Row="2" Header="Production Gantt Chart" FontWeight="SemiBold">
            <Border BorderBrush="Gainsboro" BorderThickness="1">
                <TextBlock Text="Gantt Chart will be displayed here." VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray" FontSize="18"/>
            </Border>
        </GroupBox>

        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="841*"/>
                <ColumnDefinition Width="529*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Customer Order Fulfillment" FontWeight="SemiBold" Padding="5" Margin="0,0,90,0">
                <DataGrid ItemsSource="{Binding PlanoCliente}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cust.Order #" Binding="{Binding CustomerOrderNumber}"/>
                        <DataGridTextColumn Header="Product" Binding="{Binding Product}"/>
                        <DataGridTextColumn Header="Length" Binding="{Binding Length}"/>
                        <DataGridTextColumn Header="Cutting Width" Binding="{Binding CuttingWidth}"/>
                        <DataGridTextColumn Header="Req. Date" Binding="{Binding RequiredDate, StringFormat=d}"/>
                        <DataGridTextColumn Header="Req. Qty" Binding="{Binding RequiredQuantity}"/>
                        <DataGridTextColumn Header="Planned Date" Binding="{Binding PlannedDate, StringFormat=d}"/>
                        <DataGridTextColumn Header="Deviation" Binding="{Binding Deviation}"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                    </DataGrid.Columns>

                </DataGrid>
            </GroupBox>

            <GroupBox Header="Production Orders (by Cutting Pattern)" FontWeight="SemiBold" Padding="5" Margin="751,0,0,0" Grid.ColumnSpan="2">
                <DataGrid ItemsSource="{Binding PlanoProducao}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Job #" Binding="{Binding JobNumber}"/>
                        <DataGridTextColumn Header="Machine" Binding="{Binding Maquina}"/>
                        <DataGridTextColumn Header="Prod.Date" Binding="{Binding DataProducao, StringFormat=d}"/>
                        <DataGridTextColumn Header="Length" Binding="{Binding Length}"/>
                        <DataGridTextColumn Header="Composition" Binding="{Binding Composition}" Width="2*"/>
                        <DataGridTextColumn Header="Waste %" Binding="{Binding WastePercentage, StringFormat=P2}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <StatusBar Grid.Row="4" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
<Window x:Class="APSSystem.Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="APS System - Dashboard"
        Width="1100"
        Height="700"
        WindowStartupLocation="CenterScreen">

    <!-- ÚNICO conteúdo direto do Window -->
    <Grid x:Name="Root" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header/Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Chart host -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
            <TextBlock Text="Ocupação (min) — Dashboard"
                       FontSize="20"
                       FontWeight="SemiBold"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                        Spacing="8">
                <DatePicker x:Name="dtFiltro" Width="180" />
                <Button x:Name="btnAtualizar"
                        Width="120"
                        Content="Atualizar"
                        Click="OnAtualizarClick" />
            </StackPanel>
        </DockPanel>

        <!-- Área do gráfico (será criada em C# e adicionada aqui) -->
        <Border Grid.Row="1"
                x:Name="ChartHost"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="8" />

        <!-- Status bar -->
        <StatusBar Grid.Row="2" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Pronto" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
